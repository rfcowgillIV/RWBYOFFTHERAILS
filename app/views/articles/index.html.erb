<header class = header4articles>
<%= link_to 'Home Page', welcome_index_url%>
<%= link_to 'New article', new_article_path %>
</header>

<body class = body4articles>

<h1>Fan Aritcles</h1>

<table>
  <tr>
    <th>Tales from the Grimm</th>
    <th>Preview</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show (Lumos)', article_path(article) %></td>
      <td><%= link_to 'Edit (Erasers!)', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy (Lazers)', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

</body>

